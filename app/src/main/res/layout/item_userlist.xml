<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userlist_relative"
    android:background="@drawable/buttonbackground"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/userlist_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="6dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_below="@id/userlist_tv_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/userlist_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my college"
            android:textSize="12sp"
            android:padding="6dp"
            android:background="@drawable/etcbackground"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/userlist_tv_mycollege"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@id/userlist_tv_name"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your college"
            android:textSize="12sp"
            android:padding="6dp"
            android:background="@drawable/etcbackground"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/userlist_tv_yourcollege"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/userlist_tv_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_toRightOf="@id/userlist_tv_mycollege" />

    </LinearLayout>

    <TextView
        android:id="@+id/userlist_tv_personnel"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_below="@id/userlist_linear"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/userlist_tv_gender"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/userlist_btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신청"
        android:textSize="12sp"
        android:textColorHighlight="@color/colorPrimary"
        android:layout_below="@id/userlist_tv_personnel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextbackground"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"/>



</RelativeLayout>